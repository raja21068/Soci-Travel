<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netlync.sociotravel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.netlync.sociotravel.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.netlync.sociotravel.NewAccount"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.netlync.sociotravel.NEWACCOUNT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.netlync.sociotravel.VerifyAccount"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.netlync.sociotravel.VERIFYACCOUNT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.netlync.sociotravel.SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.netlync.sociotravel.SEARCHACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.netlync.sociotravel.SearchViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.netlync.sociotravel.SEARCHVIEWACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.netlync.sociotravel.AddShareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.netlync.sociotravel.ADDSHAREACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
          <activity
            android:name="com.netlync.sociotravel.UserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.netlync.sociotravel.USERACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
