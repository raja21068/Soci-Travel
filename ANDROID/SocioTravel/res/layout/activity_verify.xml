<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Verify Account"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewUser"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewDateShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Code" />

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Password" />

        <EditText
            android:id="@+id/editTextPasswordVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textViewPhoneDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-type Password" />

        <EditText
            android:id="@+id/editTextRetyepPassword"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonVerify"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewErrorVerify"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/textViewUser"
        android:layout_weight="1"
        android:textColor="#FF0000" />

</RelativeLayout>